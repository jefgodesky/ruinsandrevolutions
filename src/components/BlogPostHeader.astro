---
const { frontmatter, url, level = 'h1' } = Astro.props
const { title, pubDate } = frontmatter
const readablePubDate = pubDate.toLocaleDateString('en-us', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC' })
const HeadingTag = level
---
<header class="blog-post">
  <HeadingTag class="blog-post-title">{url ? (<a href={url}>{title}</a>) : title}</HeadingTag>
  <p class="byline">
    <span>{frontmatter.author}</span> /
    <time datetime={pubDate.toString()}>{readablePubDate}</time>
  </p>
</header>